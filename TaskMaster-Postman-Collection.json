{
  "info": {
    "_postman_id": "api-taskmaster-collection-001",
    "name": "TaskMaster API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Listar todas as tarefas",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Filtrar tarefas por status (concluídas)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/tasks?completed=true",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"],
          "query": [
            { "key": "completed", "value": "true" }
          ]
        }
      }
    },
    {
      "name": "Buscar tarefa por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/tasks/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks", "1"]
        }
      }
    },
    {
      "name": "Criar nova tarefa",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Nova tarefa\",\n  \"description\": \"Descrição opcional\",\n  \"completed\": false\n}"
        },
        "url": {
          "raw": "http://localhost:3000/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks"]
        }
      }
    },
    {
      "name": "Atualizar tarefa",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Título atualizado\",\n  \"description\": \"Nova descrição\",\n  \"completed\": true\n}"
        },
        "url": {
          "raw": "http://localhost:3000/tasks/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks", "1"]
        }
      }
    },
    {
      "name": "Deletar tarefa",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/tasks/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["tasks", "1"]
        }
      }
    }
  ]
}
